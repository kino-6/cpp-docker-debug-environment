{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Quick Debug Container (No Build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/workspace/build/bin/BasicCppProject",
            "args": ["QuickDebugContainer"],
            "stopAtEntry": false,
            "cwd": "/workspace",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug Basic C++ Project (Container)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/workspace/build/bin/BasicCppProject",
            "args": ["ContainerDebugTest"],
            "stopAtEntry": false,
            "cwd": "/workspace",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "Fresh Configure & Build",  // Commented out for faster debugging
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            }
        },
        {
            "name": "Debug Basic C++ Project (Auto Build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/workspace/build/bin/BasicCppProject",
            "args": ["AutoBuildContainer"],
            "stopAtEntry": false,
            "cwd": "/workspace",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Fresh Configure & Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}