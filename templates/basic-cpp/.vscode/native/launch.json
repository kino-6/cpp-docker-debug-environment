{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Quick Debug (No Build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/BasicCppProject.exe",
            "args": ["QuickDebug"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/ProgramData/mingw64/mingw64/bin/gdb.exe"
        },
        {
            "name": "Debug Basic C++ Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/BasicCppProject.exe",
            "args": ["DebugTest"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "CMake Build",  // Commented out for faster debugging
            "miDebuggerPath": "C:/ProgramData/mingw64/mingw64/bin/gdb.exe",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            }
        },
        {
            "name": "Debug Basic C++ Project (Simple)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/BasicCppProject.exe",
            "args": ["DebugTest"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/ProgramData/mingw64/mingw64/bin/gdb.exe",
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "Attach to Process",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/bin/BasicCppProject.exe",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "C:/ProgramData/mingw64/mingw64/bin/gdb.exe"
        }
    ]
}