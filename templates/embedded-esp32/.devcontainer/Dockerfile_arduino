FROM ubuntu:22.04

# Install basic tools
RUN apt-get update && apt-get install -y \
    git \
    wget \
    curl \
    python3 \
    python3-pip \
    python3-venv \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install PlatformIO
RUN pip3 install platformio

# Create workspace
RUN mkdir -p /workspace
WORKDIR /workspace

# Set up environment
RUN echo 'export PATH="$HOME/.platformio/penv/bin:$PATH"' >> /root/.bashrc

SHELL ["/bin/bash", "-c"]