{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug JSON Parser Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/JsonParserProject",
            "args": ["--ci"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            },
            "sourceFileMap": {
                "/workspace": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug JSON Parser (Interactive Mode)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/JsonParserProject",
            "args": ["--interactive"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug JSON Parser (Recommended)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/workspace/build/bin/JsonParserProject",
            "args": ["--ci"],
            "stopAtEntry": false,
            "cwd": "/workspace",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Fresh Configure & Build",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            }
        },
        {
            "name": "Debug JSON Parser with Breakpoints",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/JsonParserProject",
            "args": ["--ci"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set breakpoint at main",
                    "text": "-break-insert main",
                    "ignoreFailures": false
                },
                {
                    "description": "Set breakpoint at printJsonInfo",
                    "text": "-break-insert printJsonInfo",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}