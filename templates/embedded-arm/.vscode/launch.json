{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build ARM Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/echo",
            "args": ["ARM project built successfully! Check build/bin/ for output files."],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "ARM: Fresh Configure & Build",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            }
        },
        {
            "name": "Run Native Unit Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/build/bin/UnitTestRunner",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/tests",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Test: Build Native Unit Tests",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            }
        },
        {
            "name": "Debug with QEMU (ARM Cortex-M4)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/EmbeddedArmProject.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set architecture to ARM",
                    "text": "-gdb-set architecture armv7e-m",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "ARM: Start QEMU and Build",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            },
            "customLaunchSetupCommands": [
                {
                    "text": "load",
                    "description": "Load program into QEMU"
                },
                {
                    "text": "monitor reset",
                    "description": "Reset the target"
                }
            ]
        },
        {
            "name": "Analyze ARM Binary",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/arm-none-eabi-objdump",
            "args": ["-h", "${workspaceFolder}/build/bin/EmbeddedArmProject.elf"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "ARM: Fresh Configure & Build",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            }
        }
    ]
}